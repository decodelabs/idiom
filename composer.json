{
    "name": "decodelabs/idiom",
    "description": "Lightwight text to HTML parser",
    "type": "library",
    "keywords": ["tags", "markup", "html"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^7.2|^8.0",

        "decodelabs/coercion": "^0.1",
        "decodelabs/tagged": "^0.13"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.0",
        "decodelabs/phpstan-decodelabs": "^0.5",
        "symplify/easy-coding-standard": "^10",

        "decodelabs/metamorph": "^0.3"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Idiom\\": "src/Idiom",
            "DecodeLabs\\Metamorph\\Handler\\": "src/Metamorph"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "psr12": "ecs check --no-progress-bar",
        "psr12-fix": "ecs check --no-progress-bar --fix"
    }
}
