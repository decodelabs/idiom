{
    "name": "decodelabs/idiom",
    "description": "Lightwight text to HTML parser",
    "type": "library",
    "keywords": [ "tags", "markup", "html" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",

        "decodelabs/coercion": "^0.3",
        "decodelabs/tagged": "^0.17"
    },
    "require-dev": {
        "decodelabs/metamorph": "^0.7",
        "decodelabs/phpstan-decodelabs": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Idiom\\": "src/Idiom",
            "DecodeLabs\\Metamorph\\Handler\\": "src/Metamorph"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.3.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
